<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="iconEllipseImageViewStyle">
        <item name="android:layout_width">@dimen/ellipse_size_60dp</item>
        <item name="android:layout_height">@dimen/ellipse_size_60dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="iconImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainBlockStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHorizontal_weight">0.5</item>
    </style>

    <style name="userImageViewLocalization">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@id/settings_text_view</item>
        <item name="layout_constraintBottom_toTopOf">@id/username_text_view</item>
    </style>

    <style name="textViewAuthActivityStyle" parent="customfontstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/register_button_night</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
</resources>